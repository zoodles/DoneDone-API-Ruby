#!/usr/bin/env ruby

begin
  require 'rubygems'
  gem 'donedone'
rescue LoadError
end

require 'donedone'

if ([] == ARGV) || ARGV.length < 4 || (ARGV[0].start_with?("-h"))
  warn "USAGE: ${$0} <domain> <usr> <pwd> <api-method> [args...]"
  exit
end
init_args = []
# puts "ARGV start: #{ARGV.inspect}"
3.times { init_args << ARGV.shift }
# puts "ARGV now: #{ARGV.inspect}"
issueTracker = DoneDone::IssueTracker.new(*init_args)
puts issueTracker.send(ARGV.shift, *ARGV)
exit
